pipeline {
    agent any

    stages {

        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Frontend Install & Build') {
            steps {
                sh '''
                    cd frontend
                    npm install
                    npm run build
                    npm run start
                '''
            }
        }

        stage('Backend Setup') {
            steps {
                sh '''
                    cd backend

                    python3 -m venv venv || true
                    . venv/bin/activate

                    pip install -r requirements.txt
                    python manage.py migrate || true
                '''
            }
        }

        stage('Start Gunicorn') {
            steps {
                sh '''
                    cd backend
                    . venv/bin/activate

                    echo "Starting Gunicorn..."

                    pkill gunicorn || true

                    nohup gunicorn \
                      --workers 3 \
                      --bind 0.0.0.0:8000 \
                      core.wsgi:application \
                      > gunicorn.log 2>&1 &
                '''
            }
        }
    }
}
